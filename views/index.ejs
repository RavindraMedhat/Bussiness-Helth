<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Company List</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
    }

    h1 {
        text-align: center;
        margin-top: 20px;
    }

    div {
        margin-bottom: 20px;
        padding: 20px;
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
        margin-top: 20px;
    }

    input[type="text"] {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    button {
        display: block;
        margin-top: 10px;
        padding: 10px;
        background-color: #007BFF;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
    }

    ul {
        list-style-type: none;
        padding: 0;
    }

    li {
        margin-bottom: 5px;
        font-size: 18px;
    }

    /* Style for the company list */
    .company-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .company-list li {
        margin: 10px 0;
        padding: 10px;
        border: 1px solid #ddd;
        background-color: #f9f9f9;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .company-list li:hover {
        background-color: #e3e3e3;
    }

    #addRatingLink {
        display: inline-block;
        margin-left: 10px;
        padding: 5px 10px;
        background-color: #007BFF;
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

    #addRatingLink:hover {
        background-color: #0056b3;
    }

    #searchContainer {

        padding: 10px;
        background-color: #f0f0f0;
    }

    /* #searchInput {
        padding-right: 50PX;
    } */

    #addRatingLink {
        text-decoration: none;
        padding: 5px 10px;
        background-color: #007BFF;
        color: #fff;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

    #addRatingLink:hover {
        background-color: #0056b3;
    }
</style>

<body>
    <h1>Company List</h1>

    <div id="searchContainer">
        <div>
            <h2>Search for a Company</h2>
            <input type="text" id="searchInput" placeholder="Enter company name">
            <button id="searchButton">Search</button>
        </div>
        <a href="/ratings" id="addRatingLink">Add New Rating</a>
    </div>



    <div>
        <h2>Companies</h2>
        <ul id="companyList" class="company-list">
            <!-- Company names will be populated here dynamically -->
        </ul>

    </div>
    <script>
        $(document).ready(function () {
            // Function to fetch the last 10 companies from the server
            function fetchLast10Companies() {
                $.ajax({
                    url: 'http://103.217.85.148:8080/last-10-companies',
                    method: 'GET',
                    success: function (data) {
                        // Populate the company list
                        const companyList = $('#companyList');
                        companyList.empty(); // Clear previous content
                        data.forEach(function (companyName) {
                            const listItem = $('<li>').text(companyName);
                            companyList.append(listItem);
                        });
                    },
                    error: function (error) {
                        console.error(error);
                    }
                });
            }

            // Initial fetching of last 10 companies
            fetchLast10Companies();

            // Event handler for the search button
            // Event handler for the search button
            $('#searchInput').on('keyup', function (event) {
                if (event.key === 'Enter') {
                    searchCompany();
                }
            });

            // Event handler for the search button click
            $('#searchButton').on('click', function () {
                searchCompany();
            });

            // Function to perform the search
            function searchCompany() {
                const companyName = $('#searchInput').val().trim();
                if (companyName.length > 0) {
                    // Make an AJAX request to get data for the entered company
                    $.ajax({
                        url: `http://103.217.85.148:8080/search/${companyName}`,
                        method: 'GET',
                        success: function (data) {
                            // Replace the company list with data for the entered company
                            const companyList = $('#companyList');
                            companyList.empty(); // Clear previous content
                            data.forEach(function (companyName) {
                                const listItem = $('<li>').text(companyName);
                                companyList.append(listItem);
                            });
                        },
                        error: function (error) {
                            console.error(error);
                        }
                    });
                }
            }

            $('#companyList').on('click', 'li', function () {
                const companyName = $(this).text();
                // Redirect to the company's page
                window.location.href = `/BussinessHelth/${encodeURIComponent(companyName)}`;
            });
        });
    </script>
</body>

</html>